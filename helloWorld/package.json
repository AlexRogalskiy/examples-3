{
  "name": "attach-github-pull-requests",
  "version": "0.0.1",
  "description": "AttachGithubPullRequests",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "module": "dist/esm/index.js",
  "collection": "dist/collection/collection-manifest.json",
  "scripts": {
    "build": "stencil build",
    "dev": "stencil build --dev --watch --serve",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "@bearer/core": "next",
    "@bearer/intents": "next",
    "@bearer/ui": "^0.74.3",
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@bearer/cli": "^0.74.2",
    "@types/jest": "latest",
    "@types/node": "^10.12.12",
