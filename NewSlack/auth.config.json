{
  "authorizationURL": "https://slack.com/oauth/authorize",
  "tokenURL": "https://slack.com/api/oauth.access",
  "authType": "oauth2",
  "authorizationParams": {
    "access_type": "offline",
    "consent": true
  },
  "tokenParams": {
    "redirect_uri": "https://int.staging.bearer.sh/v1/auth/callback"
  },
  "config": {
    "accessType": "offline",
    "callbackURL": "https://int.staging.bearer.sh/v1/auth/callback",
    "scope": ["channels:read", "channels:write"]
  },
  "setupViews": [
    { "label": "Client ID", "type": "text", "controlName": "clientID" },
    { "label": "Client Secret", "type": "password", "controlName": "clientSecret" }
  ]
}
